<aside class="cover" style="background: url({{@blog.cover}}) center/cover no-repeat fixed">
<a id="bgndVideo" class="player" data-property="{videoURL:'https://www.youtube.com/watch?v=ywMTrd9x5Bs',containment:'aside',autoPlay:true, mute:true, startAt:0, opacity:1}"></a>

  <div class="pattern"></div>
  <div class="cover container">
    <div class="profile">
      {{#if @blog.title}}
      <a id="avatar-link" title="link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
        <div class='img-container'>
          <img src="../../assets/img/me2.jpeg" alt="{{@blog.title}} avatar"
          class="profile avatar" />
        </div>
        {{> signature}}
        <h3 id="profile-resume"></h3>
      </a>
      {{/if}}
      <hr class="divider long" />
      <p>{{@blog.description}}</p>
      <hr class="divider short" />
      <div class="navigation">
        <div class="profile contact">
          {{navigation}}
          {{> social}}
          {{> search }}
        </div>
      </div>
    </div>
  </div>
</aside>


